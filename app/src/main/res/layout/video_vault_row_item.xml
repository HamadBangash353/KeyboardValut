<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_180sdp">

        <RelativeLayout
            android:id="@+id/ivImageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_120sdp"
                android:scaleType="fitXY"
                android:src="@color/restore_btn_color" />


            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_play" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnRestore"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/ivImageLayout"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_restore_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Restore"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_restore" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnDelete"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@+id/btnRestore"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_delete_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_regular"
                android:text="Delete"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_delete_media" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivShade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_selected_tick"
            android:visibility="gone" />
    </RelativeLayout>
</layout>