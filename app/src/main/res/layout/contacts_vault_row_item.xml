<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp">

            <TextView
                android:id="@+id/tvFirstLetter"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_restore_bg"
                android:fontFamily="@font/nunito_sans_regular"
                android:gravity="center"
                android:text="H"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toStartOf="@+id/ivCall"
                android:layout_toEndOf="@id/tvFirstLetter"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:maxLines="1"
                    android:text="Contact Name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <ImageView
                android:layout_toStartOf="@+id/ivEdit"
                android:id="@+id/ivCall"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_call" />

            <ImageView
                 android:layout_toStartOf="@+id/ivDelete"
                android:id="@+id/ivEdit"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_3sdp"
                android:src="@drawable/ic_delete" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>